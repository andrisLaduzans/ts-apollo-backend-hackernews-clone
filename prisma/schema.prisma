// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Link {
  id          String   @id
  createdAt   DateTime @default(now())
  description String
  url         String
  postedById  String?
  postedBy    User?    @relation(fields: [postedById], references: [id])
}

model User {
  id       String @id
  name     String
  email    String @unique
  password String
  links    Link[]
}
